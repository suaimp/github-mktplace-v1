{
  "displayName": "Header Footer Settings Tests",
  "testMatch": [
    "<rootDir>/src/pages/Settings/__tests__/**/*.test.{ts,tsx}"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/pages/Settings/__tests__/setup/testSetup.ts"
  ],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@components/(.*)$": "<rootDir>/src/components/$1",
    "^@services/(.*)$": "<rootDir>/src/services/$1",
    "^@hooks/(.*)$": "<rootDir>/src/hooks/$1"
  },
  "collectCoverageFrom": [
    "src/pages/Settings/components/HeaderFooterSettings.tsx",
    "src/pages/Settings/hooks/useHeaderFooterScripts.ts",
    "src/services/db-services/settings-services/headerFooterScriptsService.ts",
    "src/hooks/useScriptInjection.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "verbose": true
}
